# http://editorconfig.org

root = true

[*]
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.{py,js}]
indent_size = 4
max_line_length = 100

[*.{html,yml,yaml,xml}]
indent_size = 2

[*.css]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
